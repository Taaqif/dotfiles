{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.bar.json",
  "monitor": {
    "index": 1,
    "work_area_offset": {
      "left": 0,
      "top": 25,
      "right": 0,
      "bottom": 20
    }
  },
  "max_label_width": 500,
  "transparency_alpha": 0,
  "height": 30,
  "margin": {
    "vertical": 10
  },
  "grouping": {
    "kind": "Widget",
    "rounding": 100,
    "style": "DefaultWithGlowB3O0S2"
  },
  "font_family": "JetBrains Mono",
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha"
  },
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "center_widgets": [],
  "right_widgets": [
    {
      "Date": {
        "enable": true,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwelveHour"
      }
    }
  ]
}
