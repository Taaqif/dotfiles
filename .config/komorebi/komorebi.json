{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.30/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 10,
  "default_container_padding": 10,
  "border": true,
  "border_width": 8,
  "border_offset": -1,
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha"
  },
  "animation": {
    "enabled": false,
    "style": "EaseInOutBounce"
  },
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300
    }
  },
  "ignore_rules": [
    [
      // Outsystems popups
      {
        "matching_strategy": "Equals",
        "kind": "Exe",
        "id": "ServiceStudio.exe"
      },
      {
        "kind": "Title",
        "matching_strategy": "Regex",
        "id": "(Condition$)|(^Aggregate)|(Progress)|(Value$)|([Jj]ava[Ss]cript)"
      }
    ],
    {
      //ShareX - Screenshot tool
      "matching_strategy": "Equals",
      "id": "ShareX.exe",
      "kind": "Exe"
    },
    [
      // Teams mini view
      {
        "matching_strategy": "Equals",
        "id": "ms-teams.exe",
        "kind": "Exe"
      },
      {
        "id": "Meeting compact view",
        "kind": "Title",
        "matching_strategy": "StartsWith"
      }
    ]
  ],
  "floating_applications": [],
  "bar_configurations": [
    "$Env:KOMOREBI_CONFIG_HOME/komorebi.bar.monitor1.json",
    "$Env:KOMOREBI_CONFIG_HOME/komorebi.bar.monitor2.json",
    "$Env:KOMOREBI_CONFIG_HOME/komorebi.bar.monitor3.json"
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "Rows"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP"
        }
      ]
    }
  ],
  "display_index_preferences": {
    "0": "SHP14B9-4&c8506ef&0&UID265988",
    "1": "BNQ78E6-4&c8506ef&0&UID200195",
    "2": "SAM0F71-4&c8506ef&0&UID208387"
  }
}
